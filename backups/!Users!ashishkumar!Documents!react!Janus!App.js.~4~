import React, {Component} from 'react';
import {
  Text,
  setState,
  View,
  StyleSheet,
  Button,
  TextInput,
  TouchableOpacity,
} from 'react-native';

export default class mapFunction extends Component {
  constructor(props) {
    super(props);
    this.state = {
      todos: [{title: 'my first', done: false},],
      value: 'gg',
    };
  }

  createNew = () => {
    setState({
      array: (...this.state.todos, {title:'bruh', done:false})
    });
  };

  list = () => {
    return this.state.todos.map(element => {
      return (
        <View style={{margin: 10}}>
          <Text>{element.title}</Text>
          <Text>{element.subtitle}</Text>
        </View>
      );
    });
  };

  render() {
    return (
      <>
        <TextInput
          style={{
            borderColor: 'black',
            borderWidth: 1,
            paddingTop: 200,
            padding: 10,
          }}
          value={this.state.value}
        />
        <TouchableOpacity onPress={this.createNew}>
          <Text>Click</Text>
        </TouchableOpacity>
        <View style={Styles.app}>{this.list()}</View>
        <Text>{this.state.value}</Text>
      </>
    );
  }
}

const Styles = StyleSheet.create({
  app: {
    padding: 50,
  },
});
